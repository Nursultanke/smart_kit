<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_light">

    <fragment
        android:id="@+id/navigation_light"
        android:name="com.smart.kit.ui.home.HomeFragment"
        android:label="@string/title_light"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_socket"
        android:name="com.smart.kit.ui.dashboard.DashboardFragment"
        android:label="@string/title_socket"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_temperature"
        android:name="com.smart.kit.ui.notifications.NotificationsFragment"
        android:label="@string/title_temperature"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_security"
        android:name="com.smart.kit.ui.secur.SecurFragment"
        android:label="@string/title_security"
        tools:layout="@layout/secur_fragment" />
</navigation>